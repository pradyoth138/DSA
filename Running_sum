package arrays;

public class Running_sum {
	
	public static int[] run(int [] arr) {
		int [] result=new int[arr.length];
		result[0]=arr[0];
		for(int i=1;i<arr.length;i++) {
			result[i]=result[i-1]+arr[i];
		}
		return result;
	}

	public static void main(String[] args) {
		
		int[] arr= {1,2,3,4};
		int[] sum= run (arr);
		for(int val:sum) {
			System.out.println(val);
		}
		

	}

}
