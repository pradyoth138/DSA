public class Reduce_to_Zero {
	public static int numsteps(int n) {
		int counter=0;
		
		while(n!=0) {
			if(n%2==0) {
				n=n/2;
			}
			else {
				n=n-1;
			}
			counter++;
		}
     return counter;
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=14;
		int res=numsteps(n);
		System.out.println(res);
		

	}

}
